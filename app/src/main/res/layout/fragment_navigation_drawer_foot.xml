<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_gravity="bottom"
    android:layout_marginBottom="5dp"
    >
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <ImageView
            style="@style/MenuItemImageViewStyle"
            android:background="@mipmap/drawer_menu_icon_setting_nor" />
        <TextView
            style="@style/MenuItemTextViewStyle"
            android:id="@+id/tv_set"
            android:textSize="@dimen/text_size_14"
            android:text="@string/menu_setting" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <ImageView
            style="@style/MenuItemImageViewStyle"
            android:background="@mipmap/drawer_menu_icon_night_nor" />
        <TextView
            style="@style/MenuItemTextViewStyle"
            android:id="@+id/tv_night"
            android:textSize="@dimen/text_size_14"
            android:text="@string/menu_theme" />
    </LinearLayout>
</LinearLayout>
